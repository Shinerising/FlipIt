<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape
            android:shape="rectangle">
            <corners android:radius="100sp"/>
            <solid android:color="#77CC55" />
        </shape>
    </item>
    <item>
        <shape
            android:shape="rectangle">
            <corners android:radius="100sp"/>
            <solid android:color="#55AA33" />
            <gradient
                android:angle="90"
                android:startColor="#55AA33"
                android:centerColor="#66BB44"
                android:endColor="#77CC55" />
        </shape>
    </item>
</selector>