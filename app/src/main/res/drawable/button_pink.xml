<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape
            android:shape="rectangle">
            <corners android:radius="100sp"/>
            <solid android:color="#FF77CC" />
        </shape>
    </item>
    <item>
        <shape
            android:shape="rectangle">
            <corners android:radius="100sp"/>
            <solid android:color="#EE55AA" />
            <gradient
                android:angle="90"
                android:startColor="#EE55AA"
                android:centerColor="#FF66BB"
                android:endColor="#FF77CC" />
        </shape>
    </item>
</selector>